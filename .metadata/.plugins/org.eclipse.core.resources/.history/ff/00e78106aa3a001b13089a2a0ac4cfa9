	<script>
		function submit_form(){
			if(document.action_form.saleno.value === ""){
				alert("매출전표번호가 정상적으로 등록 되었습니다");
				document.action_form.saleno.focus()
				return;
			}
			if(document.action_form.saleno.value === ""){
				alert("지점코드가 정상적으로 등록 되었습니다");
				document.action_form.saleno.focus()
				return;
			}
			if(document.action_form.saleno.value === ""){
				alert("판매일자가 정상적으로 등록 되었습니다");
				document.action_form.saleno.focus()
				return;
			}
			if(document.action_form.saleno.value === ""){
				alert("매물전표가 정상적으로 등록 되었습니다");
				document.action_form.saleno.focus()
				return;
			}
			if(document.action_form.saleno.value === ""){
				alert("매물전표가 정상적으로 등록 되었습니다");
				document.action_form.saleno.focus()
				return;
			}
		}
			
		
		}
